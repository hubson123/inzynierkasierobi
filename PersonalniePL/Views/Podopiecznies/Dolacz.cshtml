@model PersonalniePL.Models.Podopieczny

@{
    ViewBag.Title = "Dolacz";
}


    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Podopieczny</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Avatar)
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.Imie)
        @Html.HiddenFor(model => model.Nazwisko)
        @Html.HiddenFor(model => model.Wiek)

        <div class="form-group">
            @Html.LabelFor(model => model.TrenerID, "TrenerID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TrenerID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TrenerID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index","Treners","")
    </div>
